extends layout

block content
  div(class="min-h-screen flex flex-col")
    //- Header
    header(class="border-b border-gray-700 h-16 flex items-center px-6")
      div(class="max-w-4xl mx-auto w-full")
        a(href="/" class="font-semibold text-sm tracking-tight flex items-center gap-2")
          span(class="text-lg") ▲
          span InviteChat

    //- Main
    main(class="flex-1 flex items-center justify-center px-6 py-16")
      div(class="text-center")
        p(class="text-gray-500 text-xs font-mono mb-4 uppercase tracking-wider") error_#{status}
        h1(class="text-6xl font-medium mb-4") #{status}
        p(class="text-gray-400 text-sm mb-10")= message
        a(href="/" class="inline-block border border-gray-600 hover:border-white px-8 py-3 text-sm transition-colors") 
          | ← Back
