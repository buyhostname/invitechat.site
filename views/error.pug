extends layout

block content
  main(class="container mx-auto max-w-4xl px-4 py-16 text-center")
    h1(class="text-6xl font-bold text-gray-300 dark:text-neutral-700")= status
    h2(class="mt-4 text-2xl font-semibold")= title
    p(class="mt-2 text-gray-600 dark:text-neutral-400")= message
    a(href="/" class="mt-8 inline-block px-6 py-2 bg-gray-900 text-white rounded-md hover:bg-gray-800 dark:bg-white dark:text-neutral-900 dark:hover:bg-neutral-200") Go Home
