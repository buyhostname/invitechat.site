extends layout

block content
  div(class="min-h-screen flex flex-col")
    //- Header
    header(class="border-b border-gray-700 h-16 flex items-center px-6")
      div(class="max-w-4xl mx-auto w-full")
        a(href="/" class="font-semibold text-sm tracking-tight flex items-center gap-2")
          span(class="text-lg") ▲
          span InviteChat

    //- Main
    main(class="flex-1 flex items-center justify-center px-6 py-16")
      div(class="w-full max-w-sm")
        //- Status
        div(class="text-center mb-10")
          p(class="text-gray-500 text-xs font-mono mb-3 uppercase tracking-wider") payment_confirmed
          h1(class="text-xl font-medium") Connect your accounts
        
        //- Platforms
        div(class="space-y-4")
          //- Discord
          a(href="/login" class="block border border-gray-700 hover:border-gray-500 p-5 transition-colors group")
            div(class="flex items-center justify-between")
              div(class="flex items-center gap-4")
                svg(class="w-5 h-5 text-gray-400 group-hover:text-white transition-colors" viewBox="0 0 24 24" fill="currentColor")
